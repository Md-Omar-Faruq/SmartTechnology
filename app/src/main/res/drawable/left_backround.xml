<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="-31"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="5dp"/>
                <padding
                    android:bottom="1px"
                    android:right="1px"
                    android:left="1px"/>
                <solid android:color="#2196F3"/>
            </shape>
        </rotate>
    </item>
    <item android:left="13dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <padding
                android:bottom="1px"
                android:right="1px"
                android:left="1px"/>
            <solid android:color="#2196F3"/>
        </shape>
    </item>

</layer-list>