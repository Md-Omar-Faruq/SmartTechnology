<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".singleEmployeeDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/backround"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:src="@drawable/loginicon2"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="3dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_gravity="center"
                    app:civ_shadow_color="#FF1744"
                    android:id="@+id/singleEmployeeImage"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:text="Employee Information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:padding="5dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:onClick="SendMassageEmployee"
                        android:id="@+id/studentMasage"
                        android:tint="#F30606"
                        android:src="@drawable/massage"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="Send Massage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:onClick="SendCallEmployee"
                        android:id="@+id/employeeCall"
                        android:tint="#FA0404"
                        android:src="@drawable/call"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="Call Phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="ID :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeId"
                    android:hint="  Id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Name :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeerName"
                    android:hint="  Name"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Mobile :"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeMobile"
                    android:hint="  Mobile Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight=".5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="F Name :"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeFname"
                    android:hint="  Fathers Name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight=".5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="M Name :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeMname"
                    android:hint="  Mother Name"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight=".5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Email :"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeEmail"
                    android:hint="  Email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight=".5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Gendere :"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeGender"
                    android:hint="  Gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight=".5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Country :"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeCountry"
                    android:hint="  Country"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_weight=".5"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Birth Date :"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeBirthDate"
                    android:hint="  Birth Date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Admission Date :"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeeAddDate"
                    android:hint="  Admission Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Present Address :"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeePresentAddr"
                    android:layout_margin="5dp"
                    android:hint="Present Address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Permanent Addr :"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/singleEmployeePermanentAddr"
                    android:hint="Permanent Address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>