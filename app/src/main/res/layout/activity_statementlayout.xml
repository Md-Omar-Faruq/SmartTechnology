<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".statementlayout">

    <LinearLayout
        android:background="@drawable/textviewbackround"
        android:weightSum="5"
        android:layout_weight=".4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Txn Date"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="In or Ex"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Taka (BDT)"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Narration"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Txn ID"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ListView
        android:dividerHeight="1dp"
        android:id="@+id/statementlistid"
        android:layout_weight="3.9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </ListView>

    <LinearLayout
        android:background="@drawable/textviewbackround"
        android:layout_weight=".7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Total Income : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Total Expense : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Current Ammount : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/totalIncome"
                android:layout_gravity="end"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/totalExpense"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/currentAmmount"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>