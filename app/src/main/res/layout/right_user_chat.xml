<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/massageLayoutId"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:visibility="gone"
            android:src="@drawable/loginicon2"
            app:civ_border_color="@null"
            android:id="@+id/profileIv"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="12sp"
            android:id="@+id/timeTv"
            android:text="24/05/2019 12:12AM"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/sender_massage_text_backround"
            android:text="Hello Frinds"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="15dp"
            android:id="@+id/massageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <TextView
        android:text="delivered"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:id="@+id/isSeenTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>