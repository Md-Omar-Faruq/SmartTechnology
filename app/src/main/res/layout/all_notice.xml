<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:background="@drawable/noticbackround"
    android:id="@+id/postCardView"
    app:cardBackgroundColor="#F1F1F1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/noticbackround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:background="#F1F1F1"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="2dp"
                android:textColor="#000000"
                android:text="Notic Title"
                android:textSize="20sp"
                android:id="@+id/notic_TitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"/>

            <TextView
                android:padding="5dp"
                android:text="12-07-2019"
                android:id="@+id/noticDateTv"
                android:autoLink="all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <TextView
            android:layout_marginBottom="2dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="post description.."
            android:padding="3dp"
            android:textSize="14sp"
            android:id="@+id/notic_descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"/>

        <ImageView
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:id="@+id/notic_imageIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>